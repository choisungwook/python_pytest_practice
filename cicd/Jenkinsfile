pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                sh """
                    docker run --rm \
                    -v /mnt/data/jenkins/workspace/$JOB_NAME:/tmp/$JOB_BASE_NAME \
                    python:3.9.1 \
                    bash -c "cd /tmp/$JOB_BASE_NAME && chmod +x ./run.sh && ./run.sh"
                """
                sh 'echo done'
            }
        }
        stage('Hello') {
            steps {
                script {
                    def scannerHome = tool 'sonarqube4_7';
                    withSonarQubeEnv('sonar') {
                      sh '${scannerHome}/bin/sonar-scanner '
                    }
                }

            }
        }
    }
    post {
        success {
            sh "ls -l ./reports"
            junit '**/reports/*.xml'
        }
   }
}